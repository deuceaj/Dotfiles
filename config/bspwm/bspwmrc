#! /bin/sh

#Clean lingering programs when reloaded
"$HOME/.config/bspwm/clean" &

###############################
#Start polybar first
###############################
bash ~/.config/polybar/launch.sh --hack &
corectrl &
nitrogen --restore &
bash ~/.local/led.sh
# run_once('/usr/lib/polkit-1/polkit-agent-helper-1')

# Variable Defines (Default)
# color0=#3B4252
# color4=#D8DEE9


# Variable Defines
color0=#3B4252
color1=#2bb5fe
color2=#7e6fd8
color3=#8b64cc
color4=#D8DEE9
color5=#ce007c
color6=#fe0099



# Make sure sxhkd is always running
while :; do
    if pgrep -x sxhkd > /dev/null; then
        true
    else
        sxhkd &
    fi
    sleep 5
done &

#Fix Mouse curoor on startup 
xsetroot -cursor_name left_ptr

#Set Keyboard Layout
setxkbmap -layout us

#Monitor Config
bspc monitor HDMI-A-0 -d Alpha Beta Gamma Delta 5
bspc monitor DVI-D-0  -d 6 7 8 9 10

#BSPWM Config
bspc config border_width        0
bspc config top_padding         20
bspc config right_padding       5
bspc config left_padding        5
bspc config bottom_padding      0
bspc config window_gap          5
bspc config top_monocle_padding  0
bspc config right_monocle_padding 0
bspc config left_monocle_padding 0
bspc config bottom_monocle_padding 0

bspc config focused_border_color "$color"
bspc config normal_border_color  "$color1"
bspc config active_border_color  "$color2"
bspc config presel_feedback_color "$color6"
bspc config split_ratio          0.50
bspc config borderless_monocle   true  
bspc config gapless_monocle      false
bspc config focus_follows_pointer true
bspc config external_rules_command "$HOME/.config/bspwm/external_rules.sh"

#Application Rules
# Use command "xprop | grep WM_CLASS" to find the name of the application to be entered below
# After the command click on the application window and the name will be generated after the command and use the name generated by this command.
# Search "Bare-bones window manger by Angad Sharma" on dev.to for more
bspc rule -a firefox-developer-edition='^1' follow=on
bspc rule -a Gimp desktop='^8' follow=on
bspc rule -a wine desktop='^7' state=floating follow=on
bspc rule -a variety state=floating
bspc rule -a Chromium desktop='^2'
bspc rule -a mplayer2 state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
bspc rule -a Discord desktop='^6'
bspc rule -a synergy desktop='^9'

#Auto-Start
bspc desktop -f ^1
sleep 0.50
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
picom --config "$HOME/.config/bspwm/picom.conf" &
# /usr/bin/synergys -f -d ERROR -n studio-pc -c /etc/synergy.conf -a 192.168.69.10:24800 --log ~/.local/log/synergy.log &
flameshot &



